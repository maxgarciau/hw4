<h1><%= @place["name"] %></h1>

<div class="mt-2">
<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>
</div>

<% if @current_user %>

<h2>My Posts</h2>
<div class="row">
      <% for post in @posts %>
  <div class="col-md-4 col-sm-6">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <p><%= post["description"] %></p>
  </div>
      <% end %>
</div>


<%else%>
Please login to see your posts
<% end %>
